# AgriSahayak Backend Environment Configuration
# Copy this file to .env and fill in your values

# ========================================
# DATABASE (SQLite is default for dev)
# ========================================
# For SQLite (default, no setup needed):
DATABASE_URL=sqlite:///./agrisahayak.db

# For PostgreSQL (production):
# DATABASE_URL=postgresql://user:password@localhost:5432/agrisahayak

# Redis (optional, for caching)
# REDIS_URL=redis://localhost:6379

# ========================================
# AUTHENTICATION
# ========================================
# Change this in production!
JWT_SECRET_KEY=agrisahayak-super-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# ========================================
# TWILIO IVR (Optional)
# ========================================
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# ========================================
# EXTERNAL APIS (Optional)
# ========================================
WEATHER_API_KEY=

# ========================================
# ML MODELS
# ========================================
# Path relative to backend/app/ or absolute
MODEL_PATH=../ml/models
